# create lags

bysort country: gen lydt = l.ydt
bysort country: gen lcdt = l.cdt
bysort country: gen lgdt = l.gdt
bysort country: gen lidt = l.idt
bysort country: gen lmdt = l.mdt
bysort country: gen lxdt = l.xdt
bysort country: gen ltbdt = l.tbdt
bysort country: gen lcadt = l.cadt

# regress

timer on 1
tempfile master using
save `master'
qui statsby _b[_cons] _b[year],by(country) :regress yt year year2
save `using', replace
use `master'
qui merge m:1 country using `using'
gen yhat1 =_stat_1+_stat_2*year+_stat_3*year2
timer off 1

# clean

drop _stat_1 _stat_2 _stat_3 _merge
generate dummy = 1
replace dummy = . if missing(yt)
generate yhat = yhat1*dummy
drop yhat1 dummy
